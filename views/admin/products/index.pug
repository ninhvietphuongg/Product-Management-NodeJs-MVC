extends  ../layouts/default.pug

block main
  h1(class="mb-4") Danh sách sản phẩm
  .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body 
      each input in filterStatus 
        button(
        class = "btn btn-sm mr-1 btn-outline-success"
        button-status = input.status
        ) #{input.name}
      
  
  table.table.table-hover.table-sm
    thead
      tr
        th STT
        th Hình ảnh
        th Tiêu đề
        th Giá
        th Trạng thái
        th Hành động

    tbody
      each items, index in products
        tr 
          td #{index + 1}
          td
            img(
              src=`${items.thumbnail}`
              alt=`${items.title}`
              width="100px"
              height="auto"
            )
          td #{items.title}
          td #{items.price}$
          td
            - if(items.status == "active")
                a(href="#" class="badge badge-success") Hoạt động 
            - else 
                a(href="#" class="badge badge-danger") Dừng hoạt động 
          td
            button(class="btn btn-warning btn-sm") Sửa
            button(class="btn btn-danger btn-sm ml-1") Xóa