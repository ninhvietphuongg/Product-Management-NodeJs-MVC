extends  ../layouts/default.pug
include ../mixins/pagination.mixin.pug
include ../mixins/form.change.multi.mixin.pug
include ../mixins/filter.status.mixin.pug
include ../mixins/form.search.mixin.pug
include ../mixins/alert.mixin.pug
include ../mixins/format.datetime.mixin.pug




block main
  if(role.permissions.includes("products_view"))

      +alert-success()
      h1(class="mb-4") Quản lý sản phẩm

      .card.mb-3
        .card-header Bộ lọc và Tìm kiếm
        .card-body
          .row
            .col-8
              +filter-status(filterStatus)
            .col-4
              +form-search(keyword)
      
      .card.mb-3
        .card-header Sắp xếp
        .card-body
          .row
            .col-5
              div(sort)
                select(
                  class="form-control"
                  name="sort"
                  sort-select
                )
                  option(value="position-desc") Vị trí giảm dần
                  option(value="position-asc") Vị trí tăng dần
                  option(value="price-desc") Giá giảm dần
                  option(value="price-asc") Giá tăng dần
                  option(value="title-asc") Tiêu đề A - Z
                  option(value="title-desc") Tiêu đề Z - A

                button(
                  class="btn btn-danger mt-2"
                  sort-clear
                ) Clear
      
        
      table(
        class = "table table-hover table-sm"
        multi-check-table
        )
        .card.mb-3
          .card-header Danh sách
          .card-body
                .row 
                  .col-8
                      +form-change-multi(`/${prefixAdmin}/products/change-multi-status?_method=PATCH`)
                  if(role.permissions.includes("products_create"))
                    .col-4
                        a(
                          href=`/${prefixAdmin}/products/create`
                          class="btn btn-outline-success"
                        ) + Thêm mới

        thead
          tr
            th 
              input(
              type="checkbox"
              name = "checkbox-all"
              )
            th STT
            th Hình ảnh
            th Tiêu đề
            th Giá
            th Vị trí
            th Trạng thái
            th Người tạo
            th Hành động
        tbody
          each items, index in products
            tr 
              td
                input(
                type="checkbox"
                name = "check-box-data"
                value = items.id
                )
              td #{objectPagination.limitPages*(objectPagination.currentPage-1) + (index + 1)}
              td
                img(
                  src=`${items.thumbnail}`
                  alt=`${items.title}`
                  width="100px"
                  height="auto"
                )
              td #{items.title}
              td #{items.price}$
              td 
                input(
                  type="number"
                  style = "width : 100px"
                  name = "position"
                  value = `${items.position}`
                  min = "1"
                )
              td
                if(role.permissions.includes("products_edit"))  
                  - if(items.status == "active")
                      button(
                        class="badge badge-success"
                        data-id = items.id 
                        data-change-status = "inactive"
                        ) Hoạt động 
                  - else 
                      button(
                        class="badge badge-danger"
                        data-id = items.id 
                        data-change-status = "active"
                        ) Dừng hoạt động 
                else 
                  h6 Access Denied
              td
                p  #{items.accountFullName}
                +formatDateTime(items.createdBy.createdAt)
              td
                a(
                  href=`/${prefixAdmin}/products/detail/${items.id}`
                  class = "btn btn-info btn-sm"
                ) Chi tiết
                if(role.permissions.includes("products_edit"))  
                  a(
                    href = `/${prefixAdmin}/products/edit/${items.id}`
                    class="btn btn-warning btn-sm ml-1"
                  ) Sửa
                if(role.permissions.includes("products_delete"))  
                  button(
                    class="btn btn-danger btn-sm ml-1"
                    button-delete-status
                    data-id = items.id
                    ) Xóa
      +pagination(objectPagination)
      form(action=""
      method="POST"
      path = `/${prefixAdmin}/products/change-status`
      form-change-status
      ) 
      form(action=""
      method="POST"
      path=`/${prefixAdmin}/products/delete-status`
      form-delete-status
      )
  else 
    h1 Access Denied