extends  ../layouts/default.pug

block main
  if(role.permissions.includes("products_edit"))
    h1(class="mb-4") Thêm mới sản phẩm

    form(
      action=`/${prefixAdmin}/products/edit/${products.id}?_method=PATCH`
      id="form-edit-product"
      method="POST"
      enctype="multipart/form-data"
    )
      div(class="form-group")
        label(for="title") Tiêu đề
        input(
          type="text"
          class="form-control"
          id="title"
          name="title"
          value = products.title
          required
        ) 
      div(class="form-group")
        label(for="desc") Mô tả
        textarea(
          class="form-control content"
          id="desc"
          name="description"
          rows="5"
        ) #{products.description}
      div(class="form-group")
        label(for="price") Giá
        input(
          type="number"
          class="form-control"
          id="price"
          name="price"
          value=products.price
          min="0"
        ) 
      div(class="form-group")
        label(for="discount") % Giảm giá
        input(
          type="number"
          class="form-control"
          id="discount"
          name="discountPercentage"
          value=products.discountPercentage
          min="0"
        )
      div(class="form-group")
        label(for="stock") Số lượng
        input(
          type="number"
          class="form-control"
          id="stock"
          name="stock"
          value=products.stock
          min="0"
        )
      div(
        class="form-group"
        upload-image
        )
        label(for="thumbnail") Ảnh
        input(
          type="file"
          class="form-control-file"
          id="thumbnail"
          name="thumbnail"
          accept = "image/*"
          upload-image-input
        )
        img(
          src=products.thumbnail
          upload-image-preview
          class = "image-preview"
          )
      div(class="form-group")
        label(for="position") Vị trí
        input(
          type="number"
          class="form-control"
          id="position"
          name="position"
          value=products.position
          placeholder="Tự động tăng"
          min="1"
        )
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusActive"
          name="status"
          value = "active"
          checked=(products.status == "active" ? true : false)
        )
        label(for="statusActive" class="form-check-label") Hoạt động
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusInActive"
          name = "status"
          value = "inactive"
          checked=(products.status == "inactive" ? true : false)
        )
        label(for="statusInActive" class="form-check-label") Dừng hoạt động
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Cập nhật
  else 
    h1 Access Denied