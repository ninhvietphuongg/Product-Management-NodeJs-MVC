mixin pagination(objectPagination)
  nav 
    ul(class = "pagination")
      - if(objectPagination.currentPage > 1)
          li(class = "page-item")
          button(
          class = "page-link" 
          button-pagination = objectPagination.currentPage - 1
          ) Trang trước
      - for(var i = 1; i <= objectPagination.countPagination; i++)
          li(class = `page-item ${objectPagination.currentPage == i ? "active" : "inactive"}`)
            button(
            class = "page-link "
            button-pagination = i
            ) #{i}
      - if(objectPagination.currentPage < objectPagination.countPagination)
          li(class = "page-item")
          button(
          class = "page-link" 
          button-pagination = objectPagination.currentPage + 1
          ) Trang sau
