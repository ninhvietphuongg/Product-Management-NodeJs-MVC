mixin form-search(keyword)
    form(id="form-search" class = "form-search")
        .input-group
            input(
                type="text"
                placeholder="Nhập từ khóa"
                name="keyword"
                class="form-control input-search"
                value=keyword
            )
        .input-group-append
            button(
                class="btn btn-success"
                type="submit"
                button-form-search
            ) Tìm
